{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Jogo Completo",
            "type": "process",
            "command": "C:\\raylib\\w64devkit\\bin\\gcc.exe",
            "options": {
                "cwd": "${workspaceFolder}/game",
                "env": {
                    "PATH": "C:\\raylib\\w64devkit\\bin;${env:PATH}"
                }
            },
            "args": [
                "-std=c99",
                "menu.c",
                "fase1.c",
                "fase2.c",
                
                "-o",
                "jogo.exe",
                "-I", "C:\\raylib\\raylib\\src",
                "-L", "C:\\raylib\\raylib\\src",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-Wall"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compila menu.c e fase1.c juntos na pasta game"
        }
    ]
}